{
    "name": "gitops",
    "description": "Swiss army knife for running DevOps like tasks on NPM based repositories in your Git organization",
    "type": "module",
    "author": "Julian Pereira",
    "license": "ISC",
    "version": "0.0.36",
    "engines": {
        "node": ">=16",
        "npm": ">=8"
    },
    "bin": {
        "gitops": "./dist/index.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "typescript",
        "toolkit",
        "git",
        "octokit",
        "devops",
        "sysadmin"
    ],
    "scripts": {
        "build": "node --max-old-space-size=4096 --no-warnings --experimental-specifier-resolution=node --experimental-modules --loader ts-node/esm ./node_modules/.bin/webpack-cli --config ./webpack.config.ts",
        "prepublishOnly": "npm run build",
        "test": "jest --config ./jest.config.json --runInBand --no-cache",
        "test:watch": "jest --config ./jest.config.json --watch",
        "test:coverage": "jest --config ./jest.config.json --no-cache --runInBand --collectCoverage",
        "prettier:format": "prettier --write ./src/**/*.ts",
        "prettier:check": "prettier --list-different ./src/**/*.ts",
        "lint": "eslint --fix",
        "prepare": "husky install",
        "publish:latest": "npm publish --tag latest",
        "publish:beta": "npm publish --tag beta",
        "versions:list": "npm view gitops --json"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "npm run lint"
        ],
        "*.{json,md,html,ts,js}": [
            "npm run prettier:format"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git@github.topdanmark.local:ln0/gitops.git"
    },
    "bugs": {
        "url": "https://github.topdanmark.local/ln0/gitops/issues"
    },
    "publishConfig": {
        "registry": "http://artifactory.topdanmark.local/artifactory/api/npm/npm-local"
    },
    "devDependencies": {
        "@types/figlet": "^1.5.5",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^29.2.4",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.11.15",
        "@types/prompt": "^1.1.4",
        "@types/semver": "^7.3.13",
        "@types/tar": "^6.1.3",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "jest-mock": "^29.3.1",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "terser-webpack-plugin": "^5.3.6",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "@octokit/rest": "^19.0.5",
        "chalk": "^5.2.0",
        "commander": "^9.4.1",
        "date-fns": "^2.29.3",
        "dotenv": "^16.0.3",
        "figlet": "^1.5.2",
        "fs-extra": "^11.1.0",
        "globby": "^13.1.3",
        "lodash": "^4.17.21",
        "prompt": "^1.3.0",
        "semver": "^7.3.8",
        "tar": "^6.1.13"
    }
}
